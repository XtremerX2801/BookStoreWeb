@page "/book-detail/{id}"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Rookies.CustomerSites.Pages.ProductDetailModel
@{
	
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="col-lg-3 text-center">
	<div class="card border-0 bg-light mb-2">
		<div class="card-body">
			<img src=@Model.BookImg width="300" height="300">
		</div>
	</div>
	
	<h6 style="color:#0F0668;">@Model.BookName</h6>
	<p style="color:#33D1EA;">@Model.Author</p>
	<p style="color:#33D1EA;">@Model.BookPrice$</p>

	<div class="mt-1 d-flex justify-content-between align-items-center">
        <div class="small-ratings"> 
			<a class="fa fa-star rating-color" id="star-1" asp-page="/ProductDetail" asp-route-id="@Model.BookId" asp-route-rating="1"></a> 
			<a class="fa fa-star rating-color" id="star-2" asp-page="/ProductDetail" asp-route-id="@Model.BookId" asp-route-rating="2"></a> 
			<a class="fa fa-star rating-color" id="star-3" asp-page="/ProductDetail" asp-route-id="@Model.BookId" asp-route-rating="3"></a> 
			<a class="fa fa-star rating-color" id="star-4" asp-page="/ProductDetail" asp-route-id="@Model.BookId" asp-route-rating="4"></a> 
			<a class="fa fa-star rating-color" id="star-5" asp-page="/ProductDetail" asp-route-id="@Model.BookId" asp-route-rating="5"></a> 
		</div>
    </div>

</div>